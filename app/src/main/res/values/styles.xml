    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base" />
    <style name="NoTranslucentStatusBar" parent="AppTheme" />
    <style name="TranslucentStatusBar" parent="AppTheme" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="AppTheme.Base.Button.White" parent="Widget.MaterialComponents.Button.TextButton">
        <!--<item name="android:textColor">@color/colorAccent</item>-->
    </style>

    <style name="CancelButtonLightTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorAccent">@color/colorError</item>
    </style>

    <style name="ChipTextStyle_Selected" parent="TextAppearance.MaterialComponents.Chip">
        <!--<item name="android:textSize">13sp</item>-->
        <item name="android:textColor">@color/text_chip_states</item>
    </style>

    <style name="CollapsingToolbarLayout.TextTitle" parent="@style/headLine6">
        <item name="android:textSize">26sp</item>
    </style>
    <!--text's styles-->
    <style name="headLine6" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.0125</item>
    </style>
    <style name="headLine5" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
    </style>
    <style name="subtitle1" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.029375</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="subtitle2" parent="@style/TextAppearance.MaterialComponents.Subtitle2" />
    <style name="body1" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02125</item>
    </style>
    <style name="body2" parent="@style/TextAppearance.MaterialComponents.Body2" />

    <style name="styleBody1" parent="@android:style/Widget.TextView">
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:lineSpacingExtra">1.5sp</item>
    </style>
    <style name="styleBody2" parent="@android:style/Widget.TextView">
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>
