<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             app:layout_behavior="@string/appbar_scrolling_view_behavior"
             tools:context=".ui.screen.home.favorite.FavoriteFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvLikedRecipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_recipe"/>

    <TextView
        android:id="@+id/txtNoData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="22sp"
        android:background="@color/divider"
        android:text="@string/no_favorite_recipe"
        android:visibility="gone"/>

    <ViewStub
        android:id="@+id/stub_search_suggestion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/layout_search_view_suggestion"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</FrameLayout>