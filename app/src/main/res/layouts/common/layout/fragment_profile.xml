<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="32dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_drawer_nav_header"
                app:layout_scrollFlags="scroll"/>

            <ImageView
                android:id="@+id/img"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:layout_marginRight="@dimen/margin_16dp"
                tools:src="@mipmap/ic_launcher_round"
                app:layout_anchor="@id/imgHeader"
                app:layout_anchorGravity="bottom|end"
                app:layout_scrollFlags="scroll"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <TextView
            android:id="@+id/txtDisplayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingStart="@dimen/margin_16dp"
            android:paddingRight="@dimen/padding_16"
            android:paddingEnd="@dimen/padding_16"
            android:paddingTop="@dimen/padding_8dp"
            android:paddingBottom="@dimen/padding_8dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_account_card_details"
            android:drawableLeft="@drawable/ic_account_card_details"
            android:drawablePadding="@dimen/padding_8dp"
            tools:text="@string/label_displayName"
           />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divider"
            />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingStart="@dimen/margin_16dp"
            android:paddingRight="@dimen/padding_16"
            android:paddingEnd="@dimen/padding_16"
            android:paddingTop="@dimen/padding_8dp"
            android:paddingBottom="@dimen/padding_8dp"
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_at_outline_fix"
            android:drawableLeft="@drawable/ic_at_outline_fix"
            android:drawablePadding="@dimen/padding_8dp"
            tools:text="@string/label_email"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divider"/>

        <TextView
            android:id="@+id/txtFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingStart="@dimen/margin_16dp"
            android:paddingRight="@dimen/padding_16"
            android:paddingEnd="@dimen/padding_16"
            android:paddingTop="@dimen/padding_8dp"
            android:paddingBottom="@dimen/padding_8dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_heart_outline"
            android:drawableStart="@drawable/ic_heart_outline"
            android:drawablePadding="@dimen/padding_8dp"
            tools:text="@string/label_favorite_recipes"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divider"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingStart="@dimen/margin_16dp"
            android:paddingRight="@dimen/padding_16"
            android:paddingEnd="@dimen/padding_16"
            android:paddingTop="@dimen/padding_8dp"
            android:paddingBottom="@dimen/padding_8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/label_notification"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_bell_outline"
                android:drawableStart="@drawable/ic_bell_outline"
                android:drawablePadding="@dimen/padding_8dp"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swNotification"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divider"
            />

        <TextView
            android:id="@+id/txtLogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingStart="@dimen/margin_16dp"
            android:paddingRight="@dimen/padding_16"
            android:paddingEnd="@dimen/padding_16"
            android:paddingTop="@dimen/padding_16"
            android:paddingBottom="@dimen/padding_16"
            android:text="@string/label_logout"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:drawableStart="@drawable/ic_logout_variant"
            android:drawableLeft="@drawable/ic_logout_variant"
            android:drawablePadding="@dimen/padding_8dp"
            android:background="?attr/selectableItemBackground"
            />
    </LinearLayout>
</ScrollView>