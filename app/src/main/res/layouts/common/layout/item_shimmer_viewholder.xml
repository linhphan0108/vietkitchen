<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/margin_16dp"
    android:paddingEnd="@dimen/margin_16dp"
    android:paddingLeft="@dimen/margin_16dp"
    android:paddingRight="@dimen/margin_16dp"
    android:paddingStart="@dimen/margin_16dp"
    android:paddingTop="@dimen/margin_16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/placeholderImage"
        android:layout_height="@dimen/placeholderImage"
        android:background="@color/shimmer_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="@dimen/placeholderTextHeight"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:background="@color/shimmer_background"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/thumbnail"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="@dimen/placeholderTextHeight"
        android:background="@color/shimmer_background"
        android:layout_marginTop="@dimen/margin_8dp"
        app:layout_constraintTop_toBottomOf="@id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintLeft_toLeftOf="@+id/view2"
        />

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="@dimen/placeholderTextHeight"
        android:background="@color/shimmer_background"
        android:layout_marginTop="@dimen/margin_8dp"
        app:layout_constraintTop_toBottomOf="@id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintLeft_toLeftOf="@+id/view2"
        />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="@dimen/placeholderTextHeight"
        android:background="@color/shimmer_background"
        android:layout_marginTop="@dimen/margin_8dp"
        app:layout_constraintTop_toBottomOf="@id/view3"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintLeft_toLeftOf="@+id/view3"
        />

    <View
        android:id="@+id/view5"
        android:layout_width="0dp"
        android:layout_height="@dimen/placeholderTextHeight"
        android:background="@color/shimmer_background"
        android:layout_marginTop="@dimen/margin_8dp"
        app:layout_constraintTop_toBottomOf="@id/view4"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintLeft_toLeftOf="@+id/view4"
        />

    <View
        android:id="@+id/view6"
        android:layout_width="0dp"
        android:layout_height="@dimen/placeholderTextHeight"
        android:background="@color/shimmer_background"
        android:layout_marginTop="@dimen/margin_8dp"
        app:layout_constraintTop_toBottomOf="@id/view5"
        app:layout_constraintStart_toStartOf="@+id/view5"
        app:layout_constraintLeft_toLeftOf="@+id/view5"
        />

    <View
        android:id="@+id/view7"
        android:layout_width="0dp"
        android:layout_height="@dimen/placeholderTextHeight"
        android:background="@color/shimmer_background"
        android:layout_marginTop="@dimen/margin_8dp"
        app:layout_constraintTop_toBottomOf="@id/view6"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintLeft_toLeftOf="@+id/view6"
        />
</android.support.constraint.ConstraintLayout>