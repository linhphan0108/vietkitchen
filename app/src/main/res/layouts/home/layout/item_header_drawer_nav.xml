<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_nav_group_height"
    android:orientation="horizontal"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="false"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    tools:targetApi="lollipop">

    <TextView
        android:id="@+id/txtListHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/margin_drawer_nav_group_item"
        android:paddingLeft="@dimen/margin_drawer_nav_group_item"
        android:paddingEnd="@dimen/margin_drawer_nav_group_item"
        android:paddingRight="@dimen/margin_drawer_nav_group_item"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="@sample/item_nav_group_title"/>
</android.support.v7.widget.CardView>