<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_nav_group_height"
    android:orientation="horizontal"
    android:layout_marginStart="@dimen/drawer_nav_group_margin_start"
    android:layout_marginEnd="@dimen/margin_16dp"
    card_view:contentPaddingLeft="@dimen/drawer_nav_group_radius"
    card_view:cardCornerRadius="@dimen/drawer_nav_group_radius"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="false"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    tools:targetApi="lollipop">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtGroupTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/margin_drawer_nav_group_item"
        android:paddingLeft="@dimen/margin_drawer_nav_group_item"
        android:paddingEnd="@dimen/margin_drawer_nav_group_item"
        android:paddingRight="@dimen/margin_drawer_nav_group_item"
        tools:drawableStart="@drawable/ic_outline_expand_more_24"
        android:drawablePadding="@dimen/drawer_nav_group_title_drawable_padding"
        android:background="@drawable/bg_states_drawer_nav_item_group"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        tools:text="@sample/item_nav_group_title"/>
</android.support.v7.widget.CardView>