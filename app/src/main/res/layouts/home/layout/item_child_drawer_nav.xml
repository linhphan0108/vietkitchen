<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_nav_child_height"
    android:layout_marginEnd="@dimen/margin_16dp"
    android:layout_marginStart="@dimen/drawer_nav_child_margin_start"
    card_view:contentPaddingLeft="@dimen/drawer_nav_child_radius"
    android:orientation="horizontal"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="false"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    tools:targetApi="lollipop">
    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/txtListItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_outline_label_24"
        android:drawablePadding="@dimen/padding_8dp"
        android:textColor="@color/text_color_states_drawer_nav_item"
        android:background="@drawable/bg_states_drawer_nav_item"
        android:textSize="14sp"
        android:maxLines="1"
        tools:text="@sample/item_nav_child_title"
        />
</android.support.v7.widget.CardView>